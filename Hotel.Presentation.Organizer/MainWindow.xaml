<Window x:Class="HotelProject.UI.Organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Welcome, Organizer!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button x:Name="button1" Content="View Activities" Width="200" Height="40" Margin="0,0,0,20" Background="#4CAF50" Foreground="White" FontSize="16" BorderThickness="0" Click="ViewActivities_Click"/>

            <Button x:Name="button2" Content="Add New Activity" Width="200" Height="40" Background="#2196F3" Foreground="White" FontSize="16" BorderThickness="0" Click="AddNewActivity_Click"/>
        </StackPanel>
    </Grid>
</Window>