<Window x:Class="HotelProject.UI.Register.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Sign-up" Height="700" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Rows for labels and controls -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="25.96"/>
        </Grid.RowDefinitions>

        <!-- Labels and controls -->
        <!-- Select Customer -->
        <TextBlock Grid.Row="0" Text="Select Customer:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="2" Name="CustomerComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,0,0,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" />

        <!-- Date of Activity -->
        <TextBlock Grid.Row="4" Text="Date of Activity:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="6" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
            <TextBox Name="DateTextBox" Margin="5,0" Text="{Binding Path=Date, StringFormat={}{0:MM/dd/yyyy}, Mode=OneWay}" IsReadOnly="True"/>
        </Border>

        <!-- Select Activities -->
        <TextBlock Grid.Row="8" Text="Select Activities:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ComboBox Grid.Row="10" Name="ActivitiesComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,0,0,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" />

        <!-- Select Members -->
        <TextBlock Grid.Row="12" Text="Select Members:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ListBox Grid.Row="14" Name="MembersListBox" DisplayMemberPath="Name" SelectionMode="Multiple" Margin="0,0,0,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" />

        <!-- Where -->
        <TextBlock Grid.Row="16" Text="Where:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="18" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
            <TextBox Name="LocationTextBox" Margin="5,0" Text="{Binding Path=Location}" IsReadOnly="True"/>
        </Border>

        <!-- Available Seats -->
        <TextBlock Grid.Row="20" Text="Available Seats:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="22" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
            <TextBox Name="AvailableSeatsTextBox" Margin="5,0" Text="{Binding Path=AvailablePlaces}" IsReadOnly="True"/>
        </Border>

        <!-- Subtotal Adults -->
        <TextBlock Grid.Row="24" Text="Subtotal Adults:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="26" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
            <TextBlock Name="SubtotalAdultsTextBlock" Margin="0,0,0,10"/>
        </Border>

        <!-- Subtotal Children -->
        <TextBlock Grid.Row="28" Text="Subtotal Children:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="30" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
            <TextBlock Name="SubtotalChildrenTextBlock" Margin="0,0,0,10"/>
        </Border>

        <!-- Discount -->
        <TextBlock Grid.Row="32" Text="Discount:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="34" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
            <TextBlock Name="DiscountTextBlock" Margin="0,0,0,10"/>
        </Border>

        <!-- Total Cost -->
        <TextBlock Grid.Row="36" Text="Total Cost:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="38" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
            <TextBlock Name="TotalCostTextBlock" Margin="0,0,0,10"/>
        </Border>

        <!-- Spacer -->
        <TextBlock Grid.Row="40"/>

        <!-- Sign Up button -->
        <Button Grid.Row="41" Content="Sign Up" Background="#4CAF50" Foreground="White" FontSize="16" Click="SignUpButton_Click" Margin="0,10,0,10" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
