<Window x:Class="Hotel.UI.Register.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Selected Members:" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="SelectedMembersListBox" BorderBrush="#FFABABAB" BorderThickness="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Text="Total Cost:" FontWeight="Bold" Margin="0,10,0,10"/>
            <TextBlock x:Name="TotalCostTextBlock" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>